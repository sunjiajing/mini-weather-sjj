<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--未来两天天气信息-->
    <RelativeLayout
        android:id="@+id/weather_future1"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true">

       <!--明日天气信息-->
        <RelativeLayout
            android:id="@+id/day1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true">
            <!--明日日期-->
            <TextView
                android:id="@+id/date01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_alignParentTop="true"
                android:text="29日 星期一"
                android:textSize="15sp"/>
            <!--明日天气图标-->
            <ImageView
                android:id="@+id/weather01_pic"
                android:layout_width="100.0dip"
                android:layout_height="50dip"
                android:layout_centerHorizontal="true"
                android:layout_above="@id/weather01"
                android:layout_below="@id/date01"
                android:layout_marginBottom="10dp"
                android:src="@drawable/biz_plugin_weather_xiaoxue"/>
            <!--明日最低~最高温度-->
            <TextView
                android:id="@+id/weather01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/weather01_tips"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:text="3°C~5°C"
                android:textSize="15sp"
                android:textColor="#cfffffff" />
            <!--明日天气状况-->
            <TextView
                android:id="@+id/weather01_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/fengli01"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:text="今日 小雪"
                android:textSize="12sp"
                android:textColor="#cfffffff"/>
            <!--明日风力信息-->
            <TextView
                android:id="@+id/fengli01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="45dp"
                android:text="微风"
                android:textSize="12sp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

        <!--后日天气信息-->
        <RelativeLayout
            android:id="@+id/day2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">
            <!--后日日期-->
            <TextView
                android:id="@+id/date02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_alignParentTop="true"
                android:text="29日 星期一"
                android:textSize="15sp"/>
            <!--后日天气图标-->
            <ImageView
                android:id="@+id/weather02_pic"
                android:layout_width="100.0dip"
                android:layout_height="100.0dip"
                android:layout_below="@+id/date02"
                android:layout_above="@id/weather02"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:src="@drawable/biz_plugin_weather_qing"/>
            <!--后日最低~最高温度-->
            <TextView
                android:id="@+id/weather02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/weather02_tips"
                android:layout_marginBottom="5dp"
                android:text="3°C~5°C"
                android:textSize="15sp"
                android:textColor="#cfffffff"
                android:layout_centerHorizontal="true" />
            <!--后日天气状况-->
            <TextView
                android:id="@+id/weather02_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/fengli02"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:text= "明日 晴"
                android:textSize="12sp"
                android:textColor="#cfffffff" />
            <!--后日风力信息-->
            <TextView
                android:id="@+id/fengli02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingBottom="45dp"
                android:text="微风"
                android:textSize="12sp"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
